<?xml version="1.0" encoding="utf-8"?>

<DataTemplate xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:Bugtracker.Models;assembly=Bugtracker.Models"
             xmlns:viewModels="clr-namespace:Bugtracker.Main.ViewModels"
             x:Class="Bugtracker.Main.Views.Bugs.Components.Comment"
             x:DataType="models:BugComment">
            <Border StrokeShape="RoundRectangle 5,5,5,5"
                    Padding="10"
                    Margin="0,10">
                <VerticalStackLayout>
                    <Label  Text="{Binding Author.Name}"
                            TextColor="{AppThemeBinding
                          Dark={StaticResource PrimaryDark},
                          Light={StaticResource Primary}}"/>
                    <Label Text="{Binding Description}" />
                </VerticalStackLayout>            
            </Border>        
</DataTemplate>